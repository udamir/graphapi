{
  "name": "gqlapi",
  "version": "0.2.1",
  "description": "The GraphAPI Specification Repository",
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist",
    "browser"
  ],
  "browser": {
    "./dist/cjs/index.js": "./browser/gqlapi.js"
  },
  "scripts": {
    "build": "tsc && tsc --module commonjs --outDir dist/cjs",
    "test": "jest --verbose",
    "prepublish": "rm -r dist || true && npm run build && npm run build:web",
    "test:coverage": "jest --verbose --coverage",
    "build:web": "webpack"
  },
  "keywords": [
    "jsonschema",
    "introspection",
    "graphql",
    "schema",
    "api"
  ],
  "author": "Damir Yusipov",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/udamir/graphapi.git",
    "type": "git"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/json-schema": "^7.0.11",
    "graphql": "^16.6.0",
    "fast-json-patch": "^3.1.1",
    "jest": "^26.0.1",
    "js-yaml": "^4.1.0",
    "json-schema": "^0.4.0",
    "ts-jest": "^26.1.0",
    "ts-loader": "^8.0.8",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.2",
    "typescript": "^4.6.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(ts?|tsx?|js?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "collectCoverage": true
  }
}
